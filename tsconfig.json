{
  "compilerOptions": {
    "lib": ["es7", "es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@app/authorize/*": [
        "src/authorize/*"
      ],
      "@app/flush/*": [
        "src/flush/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
